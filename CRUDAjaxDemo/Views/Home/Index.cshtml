@model CRUDAjaxDemo.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        padding-top: 0px;
        padding-bottom: 0px;
    }

    .container {
        display: block !important;
        justify-content: center;
        align-items: center;
        min-height: 100% !important;
        max-width: 100% !important;
        padding: 0px !important;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'poppins',sans-serif;
    }

    .form-box {
        color: #fff;
        background-color: aqua;
        position: relative !important;
        width: 100% !important;
        min-height: 100px !important;
        height: 100px !important;
        border: 2px solid black !important;
        border-radius: 1px !important;
        background-filter: blur(50px,);
        display: flex;
        justify-content: center;
        align-items: baseline !important;
    }

    .button {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 75vh;
        background: black;
        flex-direction: none;
        gap: 50px;
    }

    .first {
        position: relative;
        background: #fff;
        color: #fff;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 1.5em;
        letter-spacing: 0.5em;
        font-weight: 400;
        padding: 10px 30px;
        transition: 0.5s;
    }

        .first:hover {
            background: var(--clr);
            color: var(--clr);
            letter-spacing: 0.25em;
            box-shadow: 0 0 35px var(--clr);
        }

        .first:before {
            content: '';
            position: absolute;
            inset: 2px;
            background: #27282c;
        }

        .first span {
            position: relative;
        }

    nav {
        background: #1a1a1a;
        width: 100%;
        min-height: 70px !important;
        padding: 10px 10%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
    }

    .user-pic {
        width: 40px;
        border-radius: 50%;
        cursor: pointer;
        margin-left: 50px;
    }

    nav ul {
        width: 50%;
        text-align: right;
    }


        nav ul li {
            display: inline;
            list-style: none;
            margin: 10px 20px;
        }

            nav ul li a {
                color: #fff;
                text-decoration: none;
            }

    .logo {
        display: inline;
        word-spacing: 20px;
        width: 60%;
    }

    .sub-menu-wrap {
        position: absolute;
        top: 120%;
        right: 90px;
        width: 320px;
        max-height: 0px;
        overflow: hidden;
        transition: max-height 0.5s;
        z-index: 1;
    }

        .sub-menu-wrap.open-menu {
            max-height: 400px;
        }

    .sub-menu {
        background: #0f0e0e;
        padding: 20px;
        margin: 10px;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

        .user-info h3 {
            font-weight: 100;
        }

        .user-info img {
            width: 60px;
            border-radius: 50%;
            margin-right: 15px;
        }

    .sub-menu hr {
        margin: 15px 0 10px;
    }

    .sub-menu-link {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: hsl(120, 37%, 97%);
        margin: 4px 0;
    }

        .sub-menu-link p {
            width: 100%;
        }

        .sub-menu-link img {
            width: 40px;
            background-color: aqua;
            border-radius: 50%;
            padding: 8px;
            margin-right: 15px;
        }

        .sub-menu-link span {
            font-size: 22px;
            transition: transform 0.5s;
        }

        .sub-menu-link :hover span {
            transform: translateX(5px);
        }

        .sub-menu-link:hover p {
            font-weight: 600;
        }

    .counter {
        border-bottom: 1px solid;
        background-color: black;
        color: white;
    }
</style>

@*@Html.ActionLink("Login", "Index", "Login", null, new { @class = "btn btn-primary btn-large" })*@
<div class="form-box">
    <!-- <h1>Welcome To Project Library</h1> -->
    <nav>
        <h3 class="logo">Welcome To Project Library</h3>
        @Html.HiddenFor(m => m.UserId)
        <ul>
            <li><a href="#" class="p">home</a></li>
            <li><a href="#" class="p">features</a></li>
            <li><a href="#" class="p">about</a></li>
            <li><a href="#" class="p">contact</a></li>
        </ul>
        <img src="~/Images/User-png.png" class="user-pic" onclick="toggleMenu()">
        <div class="sub-menu-wrap" id="submenu">
            <div class="sub-menu">
                <div class="user-info">
                    <img src="images/user.png" alt="">
                    <h2> @Model.UserName</h2>
                </div>
                <hr>
                <a href="#" class="sub-menu-link">
                    <img src="images/profile.png" alt="">
                    <p>Edit Profile</p>
                    <span>></span>
                </a>
                <a href="#" class="sub-menu-link">
                    <img src="images/setting.png" alt="">
                    <p>Setting & Privacy</p>
                    <span>></span>
                </a>
                <a href="#" class="sub-menu-link">
                    <img src="images/help.png" alt="">
                    <p>Help & Support</p>
                    <span>></span>
                </a>
                <a href="@Url.Action("LogOut","Login")" class="sub-menu-link">
                    <img src="images/logout.png" alt="">
                    <p>Logout</p>
                    <span>></span>
                </a>
            </div>
        </div>
    </nav>
</div>
<div class="counter">
    <div class="row text-center">
        <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <div class="js-counter h1 mb-1"
                 data-hs-counter-options='{
           "isCommaSeparated": true
         }'>@Model.counter.TotalProjects</div>
            <span>Total Projects</span>
        </div>

        <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <div class="js-counter h1 mb-1"
                 data-hs-counter-options='{
           "isCommaSeparated": true
         }'>@Model.counter.TotalUsers</div>
            <span>Total Users</span>
        </div>

        <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <div class="js-counter h1 mb-1"
                 data-hs-counter-options='{
           "isCommaSeparated": true
         }'>@Model.counter.TotalFiles</div>
            <span>Total Files </span>
        </div>

        <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <div class="js-counter h1 mb-1"
                 data-hs-counter-options='{
           "isCommaSeparated": true
         }'>@Model.counter.TotalActiveUsers</div>
            <span>Total Active Users</span>
        </div>
    </div>
    <!-- End Row -->

</div>
<div class="button">
    <a href="@Url.Action("Index","Synopsis",new { ID = Model.UserId })" class="first" style="--clr:#1e9bff"><span>upload</span></a>
    <a href="@Url.Action("ViewFiles","Synopsis",new { ID = Model.UserId })" class="first" style="--clr:#1e9bff"><span>view</span></a>
    <a href="@Url.Action("SearchProject","Synopsis",new { ID = Model.UserId })" class="first" style="--clr:#1e9bff"><span>Search</span></a>
    <a href="@Url.Action("UserProfile","Registration",new { ID = Model.UserId })" class="first" style="--clr:#1e9bff"><span>Profile</span></a>
    <a href="@Url.Action("Index","comment",new { ID = Model.UserId })" class="first" style="--clr:#1e9bff"><span>comment</span></a>
</div>


<script>
    let submenu = document.getElementById("submenu");

    function toggleMenu() {
        submenu.classList.toggle("open-menu");
    }
</script>





